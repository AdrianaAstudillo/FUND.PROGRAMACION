Algoritmo Bucles
	Definir cont Como Entero
	Escribir "PARA (for)"
	Para i<-10 Hasta 0 Con Paso -2 Hacer
		Escribir "i: ", i
	Fin Para
	Escribir "Bucle repetir (Do-While)"
	cont= 5
	Repetir
		Escribir "valor: ",cont
		cont = cont -1
	Hasta Que cont <= 10
	cont = 5
	Escribir "Bucle Mientras (while)"
	Mientras cont>=10 Hacer
		Escribir "Valor: ", cont
		cont=cont-1
	Fin Mientras
